# -------------------------------------------------------------
# Fynt Docker Full Stack Environment
# Copy to .env.docker before running docker compose.
# -------------------------------------------------------------

# Database in docker-compose (postgres service)
DATABASE_URL=postgresql://fynt:fynt@postgres:5432/fynt
# Host-exposed Postgres port (avoid 5432 conflicts with local DB installs)
FYNT_POSTGRES_PORT=55432

# Redis in docker-compose (redis service)
REDIS_HOST=redis
REDIS_PORT=6379

# App/Auth URLs
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Required secrets
BETTER_AUTH_SECRET=replace_with_long_random_secret
ENCRYPTION_KEY=replace_with_64_hex_chars

# Runtime mode (full self-host)
FYNT_RUNTIME_MODE=full
NEXT_PUBLIC_FYNT_RUNTIME_MODE=full
FYNT_ENABLE_AUTOMATION_IN_PRODUCTION=true

# Realtime websocket URLs
# Browser -> host mapped port
NEXT_PUBLIC_EXECUTION_WS_URL=ws://localhost:3101
# Web container -> realtime service over docker network
EXECUTION_WS_URL=ws://realtime:3101
REALTIME_HOST=0.0.0.0
REALTIME_PORT=3101

# Optional dedicated stream token secret (falls back to BETTER_AUTH_SECRET)
# EXECUTION_STREAM_SIGNING_SECRET=

# Optional OAuth provider credentials
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# Optional local webhook tunnel trust
# NGROK_URL=
